@using ExaminationSystem.BL.ViewModels.ExamVM
@model List<GetAllExamVM>
@{
    ViewData["Title"] = "getAll";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}


<div class="card m-5" style="width:60rem;margin:auto;">
    <h1 class="m-1" style="color: #9e6bea ; text-align:center;">Exams</h1>

    <div class="card-body">
        <div class="row">
            <div class="col-8">

        <div class="table-responsive">
            
            <table id="myTable" class="table table-row-dashed table-row-gray-300 gy-7" style="Width:100%">
                <thead>
        <tr>
            <th>Exam ID</th>
            <th>Exam Name</th>
            <th>Final Grade</th>
            <th> Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.ExamId</td>
                <td>@item.ExamName</td>
                <td>@item.ExamFinalGrade</td>
              
                        
               
                <td class="dropdown">

                    <button class="btn btn-sm btn-icon btn-color-primary btn-active-light-primary" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa-sharp fa-solid fa-bars" style="color:#AFCBFF"></i>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item" asp-action="getExamById" asp-controller="Exam" asp-route-id="@item.ExamId">Select</a></li>

                                    <li><a class="dropdown-item" asp-action="DeleteExam" asp-controller="Exam" asp-route-id="@item.ExamId">Delete</a></li>

                                   

                                </ul>

                            </td>
            </tr>
       }
     
       
    </tbody>
</table>
        </div>
    </div>
</div>
@section JS{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
    <partial name="~/Views/Shared/Admin/_JSDataTable.cshtml" />

}

