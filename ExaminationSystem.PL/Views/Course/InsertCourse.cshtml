@using ExaminationSystem.BL.ModelVM.Courses
@model InsertIntoCourseVM
@{
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<div class="card m-5" style="width:60rem;margin:auto ; background: linear-gradient(90deg,  #cfbee9, #AFCBFF); ">
    <div class="card-body">
        <form asp-action="InsertCourse" method="post" style="color:gray;">
            <div class="row">
                <div>
                    <label asp-for="CourseName" class="form-label">Course Name</label>
                    <input type="text" asp-for="CourseName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <span asp-validation-for="CourseName" class="text-danger"></span>

                </div>
                <div>
                    <label asp-for="CourseHours" class="form-label">Course Duration</label>
                    <input type="text" asp-for="CourseHours" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <span asp-validation-for="CourseHours" class="text-danger"></span>
                </div>

            <button type="submit" class="btn m-2 " style="background-color: #AFCBFF ; color:white; width:150px"> Submit</button>
        </form>
        </<div>
        </div>
        @section Js {
            <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
            <script src="~/js/validation-styling.js"></script>
        }
